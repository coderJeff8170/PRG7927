<h1>Add a new Actor!</h1>
<form action="/actor" method="POST">
    <div>
        <label for="first_name">First Name:</label>
        <input type="text" name="first_name" style="text-transform: uppercase;">
    </div>
    <div>
        <label for="last_name">Last Name:</label>
        <input type="text" name="last_name" style="text-transform: uppercase;">
    </div>
    <div>
        <button type="submit">Submit</button>
    </div>
</form>

<ul>
    {{#each actor}}
    <li>{{first_name}} {{last_name}}</li>
    {{/each}}
</ul>