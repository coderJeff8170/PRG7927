{{!-- Put nav here --}}
<div>
    <span><a href="/users/profile">Profile</a> |</span>
    <span><a href="/posts">Posts</a></span>
    <hr>
<div>
<h1>Welcome, Administrator {{firstname}} {{lastname}}!</h1>
<h2>Email: {{email}}</h2>
<h3>Username: {{username}}</h3>
<form method="GET" action="/users/logout" id="logout" name="logout">
    <div>
        <button type="submit">Logout</button>
    </div>
</form>
<hr>
{{!-- List of 'undeleted' users to go here: --}}
{{!-- TODO: make sure this list does NOT include the current user --}}
<ul>
    {{#each users}}
    <li>
        {{!-- TODO: make this a link to /users/admin/editUser/:id --}}
        <h2><a href="/users/admin/editUser/{{UserId}}">User: {{FirstName}} {{LastName}}</a></h2>
        <form method="POST" action="/users/{{UserId}}" 
            onsubmit="return confirm('Are you sure you want to delete this user?');">
            <button type="submit" >Delete</button>
        </form>
    </li>
    {{/each}}
</ul>

<hr>
<h2>Posts I have authored</h2>
{{!-- TODO: List of posts written by this user should be displayed here --}}

<ul>
    {{#each posts}}
    <li>
        <h2>Title: {{PostTitle}}</h2>
        <p>{{PostBody}}</p>
        <form method="GET" action="/posts/editpost/{{PostId}}">
            <button type="submit" >Edit</button>
        </form>
        <form method="GET" action="/posts/deletepost/{{PostId}}" 
            onsubmit="return confirm('Are you sure you want to delete this post?');">
            <button type="submit" >Delete</button>
        </form>
    </li>
    {{/each}}
</ul>
